{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin - Mini Blog{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-5"><i class="bi bi-speedometer2"></i> Dashboard Administration</h1>
        <p class="lead">Vue d'ensemble du blog</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Utilisateurs</h6>
                        <h2 class="mb-0">{{ totalUsers }}</h2>
                    </div>
                    <div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <a href="{{ path('app_admin_user_index') }}" class="text-white text-decoration-none">
                    Voir tous <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Articles</h6>
                        <h2 class="mb-0">{{ totalPosts }}</h2>
                    </div>
                    <div>
                        <i class="bi bi-file-text fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <a href="{{ path('app_admin_post_index') }}" class="text-white text-decoration-none">
                    Voir tous <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Commentaires</h6>
                        <h2 class="mb-0">{{ pendingComments }}</h2>
                        <small>En attente</small>
                    </div>
                    <div>
                        <i class="bi bi-chat-dots fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <a href="{{ path('app_admin_comment_index') }}" class="text-white text-decoration-none">
                    Modérer <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Comptes</h6>
                        <h2 class="mb-0">{{ inactiveUsers }}</h2>
                        <small>À valider</small>
                    </div>
                    <div>
                        <i class="bi bi-person-x fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <a href="{{ path('app_admin_user_index') }}" class="text-white text-decoration-none">
                    Valider <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-check"></i> Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a href="{{ path('app_admin_post_new') }}" class="btn btn-outline-primary w-100">
                            <i class="bi bi-plus-circle"></i> Nouvel article
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('app_admin_category_new') }}" class="btn btn-outline-success w-100">
                            <i class="bi bi-plus-circle"></i> Nouvelle catégorie
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('app_admin_comment_index') }}" class="btn btn-outline-warning w-100">
                            <i class="bi bi-chat-dots"></i> Modérer commentaires
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('app_home') }}" class="btn btn-outline-info w-100">
                            <i class="bi bi-eye"></i> Voir le site
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
