{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-tags"></i> Gestion des catégories</h1>
    <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvelle catégorie
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if categories is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucune catégorie.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Nombre d'articles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td><span class="badge bg-primary">{{ category.name }}</span></td>
                                <td>{{ category.description|default('—') }}</td>
                                <td>{{ category.posts|length }}</td>
                                <td>
                                    <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_category_delete', {id: category.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer cette catégorie ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" {% if category.posts|length > 0 %}disabled title="Cette catégorie contient des articles"{% endif %}>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
