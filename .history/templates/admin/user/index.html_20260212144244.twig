{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - Admin{% endblock %}

{% block body %}
<div class="mb-4">
    <h1><i class="bi bi-people"></i> Gestion des utilisateurs</h1>
</div>

<div class="card">
    <div class="card-body">
        {% if users is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun utilisateur.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom complet</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Statut</th>
                            <th>Inscrit le</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.fullName }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge {% if role == 'ROLE_ADMIN' %}bg-danger{% else %}bg-info{% endif %}">
                                            {{ role }}
                                        </span>
                                    {% endfor %}
                                </td>
                                <td>
                                    {% if user.isActive %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-warning">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.createdAt|date('d/m/Y') }}</td>
                                <td>
                                    <form method="post" action="{{ path('app_admin_user_toggle_active', {id: user.id}) }}" style="display:inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-active' ~ user.id) }}">
                                        <button type="submit" class="btn btn-sm {% if user.isActive %}btn-warning{% else %}btn-success{% endif %}">
                                            <i class="bi {% if user.isActive %}bi-x-circle{% else %}bi-check-circle{% endif %}"></i>
                                            {% if user.isActive %}Désactiver{% else %}Activer{% endif %}
                                        </button>
                                    </form>
                                    
                                    {% if 'ROLE_ADMIN' not in user.roles %}
                                        <form method="post" action="{{ path('app_admin_user_promote', {id: user.id}) }}" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('promote' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Promouvoir cet utilisateur en tant qu\'administrateur ?');">
                                                <i class="bi bi-shield-fill-plus"></i> Admin
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
