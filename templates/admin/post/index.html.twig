{% extends 'base.html.twig' %}

{% block title %}Gestion des articles - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-file-text"></i> Gestion des articles</h1>
    <a href="{{ path('app_admin_post_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvel article
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if posts is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun article pour le moment.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Auteur</th>
                            <th>Date publication</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.id }}</td>
                                <td>
                                    <a href="{{ path('app_post_show', {slug: post.slug}) }}" target="_blank">
                                        {{ post.title }}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ post.category.name }}</span>
                                </td>
                                <td>{{ post.author.fullName }}</td>
                                <td>{{ post.publishedAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% if post.isPublished %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Publié
                                        </span>
                                    {% elseif post.publishedAt > date() %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Programmé
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-eye-slash"></i> Brouillon
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_admin_post_edit', {id: post.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_post_delete', {id: post.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
