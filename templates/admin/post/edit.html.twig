{% extends 'base.html.twig' %}

{% block title %}Modifier article - Admin{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="mb-4">
            <h1><i class="bi bi-pencil"></i> Modifier l'article</h1>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.content) }}
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.picture) }}
                        {{ form_widget(form.picture) }}
                        {{ form_errors(form.picture) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.category) }}
                            {{ form_widget(form.category) }}
                            {{ form_errors(form.category) }}
                        </div>

                        <div class="col-md-6 mb-3">
                            {{ form_label(form.publishedAt) }}
                            {{ form_widget(form.publishedAt) }}
                            {{ form_errors(form.publishedAt) }}
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Modifier
                        </button>
                        <a href="{{ path('app_admin_post_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x"></i> Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
