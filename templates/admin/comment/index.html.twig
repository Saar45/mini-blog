{% extends 'base.html.twig' %}

{% block title %}Gestion des commentaires - Admin{% endblock %}

{% block body %}
<div class="mb-4">
    <h1><i class="bi bi-chat-dots"></i> Gestion des commentaires</h1>
</div>

{% if pendingComments is not empty %}
<div class="card mb-4">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Commentaires en attente ({{ pendingComments|length }})</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Article</th>
                        <th>Auteur</th>
                        <th>Commentaire</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in pendingComments %}
                        <tr>
                            <td>
                                <a href="{{ path('app_post_show', {slug: comment.post.slug}) }}" target="_blank">
                                    {{ comment.post.title }}
                                </a>
                            </td>
                            <td>{{ comment.author.fullName }}</td>
                            <td>{{ comment.content|length > 100 ? comment.content|slice(0, 100) ~ '...' : comment.content }}</td>
                            <td>{{ comment.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <form method="post" action="{{ path('app_admin_comment_approve', {id: comment.id}) }}" style="display:inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="bi bi-check-circle"></i> Approuver
                                    </button>
                                </form>
                                <form method="post" action="{{ path('app_admin_comment_reject', {id: comment.id}) }}" style="display:inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ comment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-warning">
                                        <i class="bi bi-x-circle"></i> Rejeter
                                    </button>
                                </form>
                                <form method="post" action="{{ path('app_admin_comment_delete', {id: comment.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer ce commentaire ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endif %}

<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="bi bi-list"></i> Tous les commentaires</h5>
    </div>
    <div class="card-body">
        {% if comments is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun commentaire.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Article</th>
                            <th>Auteur</th>
                            <th>Commentaire</th>
                            <th>Statut</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_post_show', {slug: comment.post.slug}) }}" target="_blank">
                                        {{ comment.post.title }}
                                    </a>
                                </td>
                                <td>{{ comment.author.fullName }}</td>
                                <td>{{ comment.content|length > 100 ? comment.content|slice(0, 100) ~ '...' : comment.content }}</td>
                                <td>
                                    {% if comment.status == 'approved' %}
                                        <span class="badge bg-success">Approuvé</span>
                                    {% elseif comment.status == 'rejected' %}
                                        <span class="badge bg-danger">Rejeté</span>
                                    {% else %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% endif %}
                                </td>
                                <td>{{ comment.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% if comment.status != 'approved' %}
                                        <form method="post" action="{{ path('app_admin_comment_approve', {id: comment.id}) }}" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form method="post" action="{{ path('app_admin_comment_delete', {id: comment.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer ce commentaire ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
