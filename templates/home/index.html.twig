{% extends 'base.html.twig' %}

{% block title %}Accueil - Mini Blog{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4">Bienvenue sur Mini Blog</h1>
        <p class="lead">Découvrez nos derniers articles</p>
    </div>
</div>

<div class="row">
    {% if posts is empty %}
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun article n'a été publié pour le moment.
            </div>
        </div>
    {% else %}
        {% for post in posts %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if post.picture %}
                        <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
                    {% else %}
                        <img src="https://via.placeholder.com/400x200?text={{ post.title|url_encode }}" class="card-img-top" alt="{{ post.title }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="text-decoration-none text-dark">
                                {{ post.title }}
                            </a>
                        </h5>
                        <p class="card-text">{{ post.excerpt(100) }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-person"></i> {{ post.author.fullName }}
                            </small>
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> {{ post.publishedAt|date('d/m/Y') }}
                            </small>
                        </div>
                        {% if post.category %}
                            <span class="badge bg-primary mt-2">{{ post.category.name }}</span>
                        {% endif %}
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="btn btn-sm btn-outline-primary">
                            Lire la suite <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
