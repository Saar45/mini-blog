{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe - Mini Blog{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0"><i class="bi bi-key"></i> Changer le mot de passe</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_row(form.currentPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.newPassword) }}
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Conseil de sécurité :</strong> Utilisez un mot de passe fort comportant au moins 6 caractères, avec des lettres, des chiffres et des symboles.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Changer le mot de passe
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
